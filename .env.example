# Layer.ai Playable Studio - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# REQUIRED: Layer.ai API Configuration
# ============================================

# Your Layer.ai GraphQL API endpoint
LAYER_API_URL=https://api.app.layer.ai/v1/graphql

# Your Layer.ai API key (get from Layer.ai dashboard)
LAYER_API_KEY=your_layer_api_key_here

# Your Layer.ai workspace ID
LAYER_WORKSPACE_ID=your_workspace_id_here

# ============================================
# REQUIRED: Anthropic Claude API
# ============================================

# Claude API key for vision analysis
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Claude model to use (default: claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# OPTIONAL: Supabase (for persistence)
# ============================================

# SUPABASE_URL=your_supabase_url_here
# SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# OPTIONAL: Development Settings
# ============================================

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum polling time for forge tasks (seconds)
FORGE_POLL_TIMEOUT=60

# Minimum workspace credits required to forge
MIN_CREDITS_REQUIRED=50
